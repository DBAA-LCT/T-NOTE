{
  "name": "t-note",
  "version": "1.1.2",
  "description": "T-Note - 本地富文本笔记编辑器",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^6.2.3",
    "dayjs": "^1.11.19",
    "quill": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.tnote.editor",
    "productName": "T-Note",
    "icon": "build/icon-256x256.png",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon-256x256.png",
      "fileAssociations": [
        {
          "ext": "note",
          "name": "T-Note Document",
          "description": "T-Note笔记文件",
          "icon": "release/.icon-ico/icon.ico",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "main": "dist/electron/main.js"
    }
  }
}
